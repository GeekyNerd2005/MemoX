{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "outDir": "./dist",
    "rootDir": "./src",                  
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["chrome"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",                      
    "src/**/*.js"                      
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}